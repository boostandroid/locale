//        "libicui18n_headers",
    ],
    shared_libs: [
        "libboost_thread",
        "libboost_system",
        "libboost_date_time",
        "libboost_chrono",
        "libboost_atomic",
        "libboost_exception",
//        "libandroidicu",
//        "libicuuc",
//        "libicui18n",
    ],
    target: {
        android: {
            cflags: [
                "-fPIC",
