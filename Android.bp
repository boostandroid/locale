            ],
        },
        not_windows: {
            cflags: [
                "-fPIC",
                "-DPIC",
                "-fexceptions",
                "-Wno-error=implicit-fallthrough",
                "-Wno-error=non-virtual-dtor",
                "-Wno-error=unused-parameter",
            ],
         },
    },
